<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDSqlite.LoginPage">
    
        <StackLayout VerticalOptions="CenterAndExpand" Padding="15">
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        

            <Entry x:Name="txtUsuario" Placeholder="Usuario" />
            <Entry x:Name="txtContraseña" Placeholder="Contraseña" IsPassword="True" />
            <Button x:Name="btnIniciar" Text="Iniciar" Clicked="btnIniciar_Clicked" />

        <Label Text="¿No tienes una cuenta?">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Label.GestureRecognizers>
        </Label>

        <Label Text="¿Olvidó su contraseña?">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" />
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
    
</ContentPage>